<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/winningLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:background="@drawable/background_win" >

    <FrameLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical|fill_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/avatar_star"
            android:layout_width="370dp"
            android:layout_height="370dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar1" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/score_prompt_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="130dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:text="@string/score_total"
            android:textColor="@android:color/primary_text_light"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/score_value_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            android:textColor="@android:color/primary_text_light"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="70dp"
            android:padding="10dp"
            android:text="@string/win"
            android:textColor="@android:color/primary_text_light"
            android:textSize="60sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/star11_shadow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shadow" />

        <ImageView
            android:id="@+id/star11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star12_shadow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/shadow" />

        <ImageView
            android:id="@+id/star12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/star" />

        <ImageView
            android:id="@+id/star13_shadow"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shadow" />

        <ImageView
            android:id="@+id/star13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginRight="110dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/star" />

        <Button
            android:id="@+id/nextWord"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/move_button_next"
            android:onClick="Screen_Next"
            android:orientation="horizontal"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="65dp"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/home"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:background="@drawable/icon_home"
                android:gravity="center"
                android:onClick="Screen_Home"
                android:orientation="horizontal"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/category"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_category"
                android:gravity="center"
                android:onClick="Screen_Category"
                android:orientation="horizontal"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/audioAgain"
                android:layout_width="84dp"
                android:layout_height="75dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/icon_speaker"
                android:gravity="center"
                android:onClick="playWord"
                android:orientation="horizontal"
                android:scaleType="centerInside" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>